pipeline {
    agent any

     environment {
        PATH = "/Users/apple/.nvm/versions/node/v20.11.1/bin:$PATH"
    }

    stages {
        stage('Install') {
            steps {
                echo 'Installing dependencies...'
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                echo 'Building project...'
                sh 'npm run build'
            }
        }
    }
}